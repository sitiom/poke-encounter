{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",

    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
